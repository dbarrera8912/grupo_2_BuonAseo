<!DOCTYPE html>
<html lang="en">
  <%- include('../partials/head', {title: 'Formulario'}) %>
<body class="registro">
  <main class="registro_main">
    <!-- LOGO, TITULO Y SALIDA -->
    <section class="registro__logo-y-titulo">
      <div class="registro__logo-y-titulo__logo">
        <a href="/"><img class="registro__logo-y-titulo__logo2" src="/img/Logo.png"
            alt="logo pagina"></a>
      </div>
      <a class="registro__logo-y-titulo__salida" href="/">x</a>
      <h2 class="registro__logo-y-titulo__titulo">Registrarse</h2>
    </section>
    <!-- REGISTRO REDES -->
    <section class="registro__redes">
      <h4 class="registro__redes__titulo">Con su red favorita</h4>
      <article class="registro__redes__containerFB">
        <button class="registro__redes__botonFB">Continuar con <b>Facebook</b></button>
        <img src="/img/login-register/imgFacebook.png" alt="facebook">
      </article>
      <article class="registro__redes__containerGoogle">
        <button class="registro__redes__botonGoogle">Continuar con <b>Google</b></button>
        <img src="/img/login-register/imgGoogle.png" alt="Google">
      </article>
    </section>
    <!-- LINEA -->
    <section class="registro__lineaVertical">
      <div class="registro__lineaVertical__vertical-one-line"></div>
      <p class="registro__lineaVertical__letraO">o</p>
      <div class="registro__lineaVertical__vertical-two-line"></div>
    </section>
    <!-- REGISTRO EMAIL -->
    <section class="registro__email">
      <h4 class="registro__email__titulo">Con su Email</h4>
      <form action="" method="POST">
        <article class="registro__email__container">
          <input class="registro__email__texto <%= locals.errors && errors.name ? "registro__email__container-inValid" : null %>" value="<%= locals.old && old.name ? old.name : null %>" type="text" id="name" name="name" placeholder="Name*" />
          <img src="/img/login-register/imgName.png" alt="">
          <span class="registro-text-danger"><%= locals.errors && errors.name ? errors.name.msg : null %></span>
        </article>
        <article class="registro__email__container">
          <input class="registro__email__texto <%= locals.errors && errors.email ? "registro__email__container-inValid" : null %>" value="<%= locals.old && old.email ? old.email : null %>" type="email" id="email" name="email" placeholder="Email*" />
          <img src="/img/login-register/imgEmail.png" alt="">
          <span class="registro-text-danger"><%= locals.errors && errors.email ? errors.email.msg : null %></span>
        </article>
        <article class="registro__email__container">
          <input class="registro__email__texto <%= locals.errors && errors.password ? "registro__email__container-inValid" : null %>" value="<%= locals.old && old.password ? old.password : null %>" type="password" id="password" name="password" placeholder="Contraseña*" />
          <div class="password-visible">
            <i class="fas fa-eye" onclick="password_visible('ocultar',this)"></i>
            <i class="fas fa-eye-slash active"  onclick="password_visible('mostrar',this)"></i>
          </div>
          <span class="registro-text-danger"><%= locals.errors && errors.password ? errors.password.msg : null %></span>
        </article>
        <article class="registro__email__container">
          <input class="registro__email__texto <%= locals.errors && errors.password2 ? "registro__email__container-inValid" : null %>" value="<%= locals.old && old.password2 ? old.password2 : null %>" type="password" id="password2" name="password2" placeholder="Confirmar Contraseña*" />
          <div class="password-visible2">
            <i class="fas fa-eye" onclick="password_visible2('ocultar',this)"></i>
            <i class="fas fa-eye-slash active"  onclick="password_visible2('mostrar',this)"></i>
          </div>
          <span class="registro-text-danger"><%= locals.errors && errors.password2 ? errors.password2.msg : null %></span>
        </article>
        <!-- BOTON REGISTRARSE -->
        <button class="registro__email__botonRegistro" type="submit">REGISTRARSE</button>
      </form>
      <!-- INGRESAR -->
      <article class="registro__cuenta">
        <p class="registro__cuenta__texto-cuenta">¿Ya tiene una cuenta en Buon Aseo?</p>
        <a class="registro__cuenta__ingresar" href="login">Ingresar</a>
      </article>
    </section>
  </main>
</body>

</html>